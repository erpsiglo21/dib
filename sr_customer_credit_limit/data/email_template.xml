<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<record id="credit_limt_exceeded_email_template"
			model="mail.template">
			<field name="name">Credit Limit Exceeded Email</field>
			<field name="email_from">${object.user_id.email or ''}</field>
			<field name="subject">The credit limit of ${object.partner_id.name} is
				exceeded.</field>
			<field name="email_to">${ctx['email_to']|safe}</field>
			<field name="model_id" ref="sale.model_sale_order" />
			<field name="auto_delete" eval="False" />
			<field name="body_html">
                <![CDATA[
                        The credit limit of <b>${object.partner_id.name}</b> is exceeded. <br />
                        But still we have confirm Order. please review order.
                        <div style="margin: 16px 0px 16px 0px;">
                            <a href="${ctx['order_url']}" style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;" data-original-title="" title="" aria-describedby="tooltip352805">
                                Review Order
                            </a>
                        </div>
                ]]>
			</field>
		</record>
	</data>
</odoo>