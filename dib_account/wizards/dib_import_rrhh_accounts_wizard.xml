<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rrhh_account_entries_upload_view" model="ir.ui.view">
	    <field name="name">rrhh.account.entries.upload.view</field>
		<field name="model">rrhh.account.entries.upload</field>
		<field name="arch" type="xml">
		    <form string="Carga de asientos contables">
			    <group>
					<field name="currency_id"/>
					<field name="file_diary"/>
				</group>
				<footer>
					<button name="parse_file" string="Importar" type="object"  class="oe_highlight" />
					<button string="Cancel" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="rrhh_account_entries_upload_action" model="ir.actions.act_window">
		<field name="name">Carga de asientos contables rrhh</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">rrhh.account.entries.upload</field>
		<field name="view_id" ref="rrhh_account_entries_upload_view"/>
		<field name="target">new</field>
	</record>
