<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_canal_form" model="ir.ui.view">
        <field name="name">view.res.canal.form</field>
        <field name="model">res.canal</field>
        <field name="arch" type="xml">
			<form string="Canal">
				<group>
					<field name="name"/>
				</group>
			</form>
        </field>
    </record>
    <record id="view_res_canal_tree" model="ir.ui.view">
        <field name="name">view.res.canal.tree</field>
        <field name="model">res.canal</field>
        <field name="arch" type="xml">
    		<tree string="Canales">
				<field name="name"/>
			</tree>
        </field>
    </record>
	<record id="view_res_canal_search" model="ir.ui.view">
		<field name="name">view.res.canal.search</field>
		<field name="model">res.canal</field>
		<field name="arch" type="xml">
			<search string="Buscar Canal">
				<field name="name"/>
			</search>
		</field>
	</record>
	<record id="res_partner_canal_action" model="ir.actions.act_window">
		<field name="name">Canal</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">res.canal</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="view_res_canal_search"/>
	</record>
    <menuitem id="res_partner_canal_menu" name="Canal"
        action="res_partner_canal_action" parent="contacts.res_partner_menu_config"/>
</odoo>
