<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='div_address']" position="before">
                <label for="codigo_interno" string="Codigo cliente" attrs="{'invisible': [('type','!=', 'delivery')]}"/>
                <field name="codigo_interno" placeholder="Codigo interno" attrs="{'invisible': [('type', '!=', 'delivery')]}"/>
                <label for="canal_id" string="Canal" attrs="{'invisible': [('type','!=', 'delivery')]}"/>
                <field name="canal_id" placeholder="Canal" attrs="{'invisible':[('type','!=','delivery')]}" />
            </xpath>
            <field name="l10n_cl_dte_email" position="attributes">
                <attribute name="required">1</attribute>
            </field>
            <field name="l10n_cl_activity_description" position="attributes">
                <attribute name="required">1</attribute>
            </field>
        </field>
    </record>

    <record id="view_partner_address_form" model="ir.ui.view">
        <field name="name">res.partner.form.address</field>
        <field name="inherit_id" ref="base.view_partner_address_form"/>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <label for="street" position="before">
                <label for="codigo_interno" string="Codigo cliente" attrs="{'invisible': [('type','!=', 'contact')]}"/>
                <field name="codigo_interno" placeholder="Codigo interno" attrs="{'invisible': [('type', '!=', 'delivery')]}"/>
                <label for="canal_id" string="Canal" attrs="{'invisible': [('type','!=', 'contact')]}"/>
                <field name="canal_id" placeholder="Canal" attrs="{'invisible':[('type','!=','delivery')]}" />
            </label>
        </field>
    </record>
</odoo>
