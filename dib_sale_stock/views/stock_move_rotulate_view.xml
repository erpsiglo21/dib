<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_move_rotulate_view" model="ir.ui.view">
        <field name="name">stock.move.rotulate</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='operations']/field/tree" position="inside">
                <field name="rotulate" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="stock_move_line_rotulate_view" model="ir.ui.view">
        <field name="name">stock.move.line.rotulate</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="rotulate" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>

